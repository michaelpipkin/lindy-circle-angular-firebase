rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth.uid != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
      'admin' in request.auth.token &&
      request.auth.token.admin;
    }

    function isNonEmptyString(fieldName) {
      return request.resource.data[fieldName] is string &&
        request.resource.data[fieldName].size() > 0;
    }

    function isValidMember() {
      return isNonEmptyString('firstName')
        && isNonEmptyString('lastName');
    }

    match /{document=**} {
      allow read: if isAuthenticated();
    }

    match /members/{memberId} {
      allow create, update: if isAdmin() && isValidMember();
      allow delete: if isAdmin();
    }
  }
}
